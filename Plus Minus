function plusMinus(arr) {
let positiv = 0;
let negativ= 0;
let zero = 0;

for(let index = 0; index < arr.length; index += 1){
if(arr[index]> 0){
   positiv += 1;
  }else if(arr[index]< 0){
       negativ += 1;
       }else {
           zero += 1;
       }
   
}
console.log((positiv / arr.length).toFixed (6));
console.log((negativ / arr.length).toFixed (6));
console.log((zero / arr.length).toFixed (6));
}
